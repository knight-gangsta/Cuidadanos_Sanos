@page
@model Ciudadanos_Sanos.Pages.RegistroCitas.CreateModel
@{
    ViewData["Title"] = "Create";
}

<style>
    .input-wrapper input {
        background-color: #eee;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        width: 13em;
        border-radius: 1rem;
        color: black;
        box-shadow: 0 0.4rem #dfd9d9;
        cursor: pointer;
    }

    .input-wrapper input:focus {
        outline-color: lightcoral;
    }

    .select-wrapper select {
        background-color: #eee;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        width: 13em;
        border-radius: 1rem;
        color: black;
        box-shadow: 0 0.4rem #dfd9d9;
        cursor: pointer;
    }

    .select-wrapper select:focus {
        outline-color: lightcoral;
    }

    .textarea-wrapper textarea {
        background-color: #eee;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        width: 13em;
        border-radius: 1rem;
        color: black;
        box-shadow: 0 0.4rem #dfd9d9;
        cursor: pointer;
    }

    .textarea-wrapper textarea:focus {
        outline-color: lightcoral;
    }
</style>

<h1>Create Registro de Citas</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="RegistroCita.Fecha" class="control-label"></label>
                <div class="input-wrapper">
                    <input asp-for="RegistroCita.Fecha" class="form-control" />
                </div>
                <span asp-validation-for="RegistroCita.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistroCita.PacienteId" class="control-label"></label>
                <div class="select-wrapper">
                    <select asp-for="RegistroCita.PacienteId" asp-items="@Model.PacientesList" class="form-control"></select>
                </div>
                <span asp-validation-for="RegistroCita.PacienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistroCita.MedicoId" class="control-label"></label>
                <div class="select-wrapper">
                    <select asp-for="RegistroCita.MedicoId" asp-items="@Model.MedicosList" class="form-control"></select>
                </div>
                <span asp-validation-for="RegistroCita.MedicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistroCita.Descripcion" class="control-label"></label>
                <div class="textarea-wrapper">
                    <textarea asp-for="RegistroCita.Descripcion" class="form-control"></textarea>
                </div>
                <span asp-validation-for="RegistroCita.Descripcion" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-success">Crear</button>
            <a asp-page="./Index" class="btn btn-primary">Volver a la Lista</a>
        </form>
    </div>
</div>
