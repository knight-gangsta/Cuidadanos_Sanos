@page
@model Ciudadanos_Sanos.Pages.Pacientes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<style>
    .input-wrapper input {
        background-color: #eee;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        width: 13em;
        border-radius: 1rem;
        color: black;
        box-shadow: 0 0.4rem #dfd9d9;
        cursor: pointer;
    }

    .input-wrapper input:focus {
        outline-color: lightcoral;
    }
</style>

<h1>Modificar</h1>

<h4>El siguiente paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Paciente.Id" />
                <label asp-for="Paciente.Nombre_Completo" class="control-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Paciente.Nombre_Completo" class="form-control" />
                </div>
                <span asp-validation-for="Paciente.Nombre_Completo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Cedula" class="control-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Paciente.Cedula" class="form-control" />
                </div>
                <span asp-validation-for="Paciente.Cedula" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Paciente.Correo" class="control-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Paciente.Correo" class="form-control" />
                </div>
                <span asp-validation-for="Paciente.Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Descripcion" class="control-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Paciente.Descripcion" class="form-control" />
                </div>
                <span asp-validation-for="Paciente.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Modificar" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
